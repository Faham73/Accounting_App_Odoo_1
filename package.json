{
  "name": "accounting-software",
  "version": "1.0.0",
  "description": "Accounting software with Prisma and PostgreSQL",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch apps/api/server.ts",
    "build": "prisma generate --schema=./apps/api/prisma/schema.prisma",
    "start": "tsx apps/api/server.ts",
    "prisma:generate": "prisma generate --schema=./apps/api/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./apps/api/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./apps/api/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./apps/api/prisma/schema.prisma",
    "prisma:seed": "tsx apps/api/prisma/seed.ts",
    "db:seed": "npm run prisma:seed"
  },
  "prisma": {
    "seed": "tsx apps/api/prisma/seed.ts"
  },
  "keywords": [
    "accounting",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/express": "^5.0.6",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
